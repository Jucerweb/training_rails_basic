<div class = "row center-xs">
  <div class = "cols-xs-8 cols-md-6">
    <div class = "box text-left">
      <h1><%= @article.title %></h1>
      <% unless @article.user.nil? %>
      <p>
        Write for : <%= @article.user.email %>
      </p>
      <p>
        Visits : <%= @article.visits_count %>
      </p>
      <% end %>
      <div> <%= @article.body %>
      </div>
      <div class = "field">
        <h3>Comments</h3>
        <%= render "comments/form" %>
        <ul>
          <% @article.comments.each do |comment| %>
          <li>
            <%= comment.body %> - <%= comment.user.email %>
          </li>
          <% end %>
        </ul>
      </div>
      <p style = "color:white">
        <%= link_to "Edit Article", edit_article_path(@article),class:"be-red white large-padding" %>
      </p>
    </div>
  </div>
</div>

