<% name ||= "Create" %>
<h1> <%= name %>  Article </h1>
<%= form_for(@article) do |f| %>
  <% @article.errors.full_messages.each do |message| %>
    <div class = "be-red white top-space">
      * <%= message %>
    </div>
  <%end%>
  <div class = "field">
  <%= f.text_field :title, placeholder: "Title", class:"form-control" %>
  <div class = "field" >
  Front Cover: <%= f.file_field :cover %>
  </div>
  <div class = "field">
  <%= f.text_area :body, placeholder: "Write the article", style: "height: 250px", class:"form-control" %>
  </div>
  <div class = "field">
  <%= f.submit "Save", class:"btn be-red white large-padding" %>
  </div>
<% end %>